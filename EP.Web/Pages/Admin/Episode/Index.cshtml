@page "{courseId}"
@model EP.Web.Pages.Admin.Episode.IndexModel

<div class="panel panel-default">
    <div class="panel-heading">
        قسمت های دوره @Model.courseEpisodes.CourseName توسط مدرس @Model.courseEpisodes.TeacherName
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="table-responsive">
            <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                <a asp-page="CreateEpisode" asp-route-courseId="@Model.courseEpisodes.CourseId" class="btn btn-outline btn-success">ایجاد قسمت جدید</a>
                <br />
                <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                    <thead>
                        <tr>
                            <th>نام قسمت</th>
                            <th>زمان قیمت</th>
                            <th>رایگان</th>
                            <th>دستورات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var episode in Model.courseEpisodes.Episodes)
                        {
                            <tr>
                                <td>@episode.EpisodeTitle</td>
                                <td>@episode.EpisodeTime</td>
                                <td>
                                    @if (episode.IsFree)
                                    {
                                        <span class="text-success">
                                            <i class="glyphicon glyphicon-ok"></i>
                                        </span>
                                    } else
                                    {
                                        <span class="text-danger">
                                            <i class="glyphicon glyphicon-remove"></i>
                                        </span>
                                    }
                                </td>
                                <td>
                                    <a asp-page="EditEpisode" asp-route-episodeId="@episode.EpisodeId" class="btn btn-warning btn-sm">ویرایش</a>
                                    <a asp-page="DeleteEpisode" asp-route-episodeId="@episode.EpisodeId" class="btn btn-danger btn-sm">حذف</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>
