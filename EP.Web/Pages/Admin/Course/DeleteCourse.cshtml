@page "{courseId}"
@model EP.Web.Pages.Admin.Course.DeleteCourseModel
@{
}

<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            مشخصات دوره
        </div>
        <div class="panel-body">
            <form method="post">
                <input value="@ViewData["userId"]" name="userId" hidden />
                <dl class="dl-horizontal">
                    <dt>نام دوره :</dt>
                    <dd>@Model.Course.CourseName</dd>

                    <dt>مدرس :</dt>
                    <dd>@Model.Course.User.UserName</dd>

                    <dt>تاریخ ایجاد دوره</dt>
                    <dd>@Model.Course.CreateDate.ToSolarCalendar()</dd>

                    <input type="submit" value="حذف" class="btn btn-danger" />
                </dl>
            </form>
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>