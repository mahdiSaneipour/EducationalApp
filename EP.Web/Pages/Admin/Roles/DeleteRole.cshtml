@page "roleId"
@model EP.Web.Pages.Admin.Roles.DeleteRoleModel
@{
}

<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            مشخصات نقش
        </div>
        <div class="panel-body">
            <form method="post">
                <input value="@ViewData["userId"]" name="userId" hidden />
                <dl class="dl-horizontal">

                    <input asp-for="Role.roleId" hidden/>

                    <dt>نام نقش :</dt>
                    <dd>@Model.Role.roleName</dd>

                    <input type="submit" value="حذف" class="btn btn-danger" />
                </dl>
            </form>
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
