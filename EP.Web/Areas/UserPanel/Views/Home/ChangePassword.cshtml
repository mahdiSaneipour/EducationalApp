@model EP.Core.DTOs.UserPanelViewModels.ChangePasswordViewModel
@{
	ViewData["title"] = "تغییر رمزعبور";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">آموزش</a></li>
            <li class="breadcrumb-item active" aria-current="page"> پنل کاربری </li>
            <li class="breadcrumb-item active" aria-current="page"> تغییر رمزعبور</li>
        </ul>
    </nav>
</div>

<main>
    <div class="container">
        <div class="user-account">
            <div class="row">
                <partial name="_SideBar" />
                <div class="col-md-9 col-sm-8 col-xs-12">
                    <section class="user-account-content">
                        <header><h1> تغییر رمزعبور </h1></header>
                        <div class="inner form-layer">
                            <form asp-action="ChangePassword" method="post" enctype="multipart/form-data">

                                <div class="row">
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="password"><i class="zmdi zmdi-account"></i></span>
                                            <input type="password" class="form-control" asp-for="CurrentPassword" placeholder="رمزعبور فعلی" aria-describedby="username">
                                        </div>
                                        <span asp-validation-for="CurrentPassword"></span>

                                    </div>

                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="password"><i class="zmdi zmdi-account"></i></span>
                                            <input type="password" class="form-control" asp-for="Password" placeholder="رمزعبور" aria-describedby="username">
                                        </div>
                                    </div>

                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="password"><i class="zmdi zmdi-account"></i></span>
                                            <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="تایید رمزعبور" aria-describedby="username">
                                        </div>
                                        <span asp-validation-for="ConfirmPassword"></span>
                                    </div>

                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <button class="btn btn-success"> تغییر رمز عبور </button>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>