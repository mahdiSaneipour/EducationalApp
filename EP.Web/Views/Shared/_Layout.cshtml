<!DOCTYPE html>
<html class="no-js" dir="rtl" lang="fa-IR">
<head>
    <meta charset="UTF-8">
    <title> تاپ لرن </title>
    <partial name="MainTemplate/_MetaTagesMainTemplate"/>
    <partial name="MainTemplate/_CssRefrencesMainTemplate"/>
</head>

<body>
    <script src="/main-template/js/jquery.min.js"></script>
    <script src="/main-template/js/modernizr-custom.js"></script>

    <div class="landing-layer">
        <div class="container">
            <nav>
                <div class="row">
                    <div class="col-sm-6 col-xs-12">
                        <ul>
                            <li>
                                <a href=""> همکاری در فروش </a>
                                <a href=""> درباره ما </a>
                                <a href=""> تماس با ما </a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-sm-6 col-xs-12">
                        <div class="clientarea">

                            @if(User.Identity.IsAuthenticated){
                                <div class="loggein">
                                    <i class="zmdi zmdi-account"></i><a href=""> @User.Identity.Name ، خوش آمدی </a> /
                                    <a asp-controller="Account" asp-action="Logout"> خروج </a>
                                </div>
                            } else {
                                <div class="signin">
                                    <i class="zmdi zmdi-account"></i>
                                    <a asp-controller="Account" asp-action="Login"> ورود </a> /
                                    <a asp-controller="Account" asp-action="Register"> عضویت </a>
                                </div>
                            }
                            
                        </div>
                    </div>
                </div>
            </nav>

            @await RenderSectionAsync("Menu", required:false);

        </div>
    </div>

    <!-- main manu -->
    <div class="main-menu">
        @await Component.InvokeAsync("CourseGroupComponent")
    </div>
    <!-- /main manu -->
    <!-- content -->
    <main id="home-page">
        @RenderBody()
    </main>
    <!-- /content -->
    <!-- footer -->
    <partial name="MainTemplate/_FooterMainTemplate"/>
    <!-- /footer -->
    <partial name="MainTemplate/_JsRefrencesMainTemplate" />

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

