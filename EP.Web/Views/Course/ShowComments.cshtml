@using EP.Core.Tools.Date_Converter;
@model Tuple<List<EP.Domain.Entities.Course.CourseComment>, int>

@{
    Console.WriteLine("comment counts : " + Model.Item1.Count() + " | page count : " + Model.Item2);
    Layout = null;
}

@foreach (var comment in Model.Item1)
{
    <div class="comment-row">
        <img src="~/images/profile-images/@comment.User.UserAvatar">
        <div class="left-col">
            <h3>@comment.User.UserName</h3>
            <span>@comment.CreateDate.ToSolarCalendar()</span>
            <p>
                @comment.CommentText
            </p>
        </div>
    </div>
}

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        @for (var i = 1; i <= Model.Item2; i++)
        {
            <li class="page-item" onclick="ChangePage(@i)"><a class="page-link">@i</a></li>
        }
    </ul>
</nav>