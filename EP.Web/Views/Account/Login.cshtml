@model EP.Core.DTOs.AccountViewModels.LoginUserViewModel
@{
    ViewData["Title"] = "ورود";
}

<nav aria-label="breadcrumb">
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">آموزش</a></li>
        <li class="breadcrumb-item active" aria-current="page">ورود به سایت</li>
    </ul>
</nav>

<main class="client-page">

    <div class="container-content">

        @if (ViewBag.IsSuccess != null)
        {

            <div class="alert alert-success">
                <p class="help-block">ورود با موفقیت</p>
            </div>

            <script>
                var delay = 3000;
                setTimeout(function () { window.location = "/"; }, delay);
            </script>
        }

        <header><h2> ورود به سایت </h2></header>

        <div class="form-layer">

            <form action="Login" method="post">

                <div class="input-group">
                    <span class="input-group-addon" id="email-address"><i class="zmdi zmdi-email"></i></span>
                    <input asp-for="Email" type="text" class="form-control" placeholder="ایمیل" aria-describedby="email-address">
                </div>
                <span asp-validation-for="Email"></span>

                <div class="input-group">
                    <span class="input-group-addon" id="password"><i class="zmdi zmdi-lock"></i></span>
                    <input asp-for="Password" type="text" class="form-control" placeholder="رمز عبور " aria-describedby="password">
                </div>
                <span asp-validation-for="Password"></span>

                <div class="remember-me">
                    <label><input type="checkbox" name="">مرا به خاطر بسپار</label>
                </div>

                <div class="link">
                    <a href=""> <i class="zmdi zmdi-lock"></i> رمز عبور خود را فراموش کرده ام !</a>
                    <a href=""> <i class="zmdi zmdi-account"></i> عضویت در سایت </a>
                </div>

                <button class="btn btn-success"> ورود به سایت </button>

            </form>
        </div>

    </div>
</main>