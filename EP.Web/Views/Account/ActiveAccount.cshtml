@{
    ViewData["Title"] = "فعال سازی حساب کاربری";
}

<nav aria-label="breadcrumb">
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">آموزش</a></li>
        <li class="breadcrumb-item active" aria-current="page">فعال سازی ایمیل</li>
    </ul>
</nav>

<div class="container">

    @if(ViewBag.IsActive){
        <div class="alert alert-success">
            <p>حساب کاربری شما با موفقیت فعال شد</p>
            <a asp-action="Login">ورود به سایت</a>
        </div>
    } 
    else {
        <div class="alert alert-danger">
            <p>حساب کاربری با مشخصات ارسال شده پیدا نشد</p>
        </div>
    }

</div>